package leetCode;

public class Ugly {
	public static boolean isUgly(int num) {

		if (num < 0 || num == 1) {
			return num < 0 ? false : true;
		}
		while (num != 1) {
			if (num % 2 == 0) {
				num /= 2;
			} else if (num % 3 == 0) {
				num /= 3;
			} else if (num % 5 == 0) {
				num /= 5;
			} else {
				return false;
			}
		}

		return num == 1 ? true : false;
	}

	public static void main(String[] args) {
		System.out.println(isUgly(-1000));

	}

}
