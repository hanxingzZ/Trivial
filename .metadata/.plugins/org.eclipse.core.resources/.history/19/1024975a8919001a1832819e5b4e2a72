package offer;

import util.ListNode;

/**
 * 
 * @description: 输入一个链表，输出该链表中倒数第k个结点。
 * @author : 韩兴(xing.han@ucarinc.com)
 * @date 创建时间：2019年12月8日 下午2:27:39
 * @version 1.0
 */
public class FindKthToTail {
	public static ListNode<Integer> findKthToTail(ListNode<Integer> head, int k) {

		if (head == null || k <= 0) {
			return null;
		}

		ListNode root = head;

		for (int i = 1; i < k; i++) {
			if (head.next != null) {
				head = head.next;
			} else {
				return null;
			}
		}
		while (head.next != null && root.next != null) {
			root = root.next;
			head = head.next;
		}

		return root;
	}

	public static ListNode<Integer> findKthToTail1(ListNode<Integer> head, int k) {
		if (head == null || k <= 0) {
			return null;
		}
		ListNode root = head;
		int l = 0;
		while (head.next != null) {
			head = head.next;
			l++;
		}
		if (l < k) {
			return null;
		}
		for (int i = 0; i < l - k + 1; i++) {

			root = root.next;
		}
		return root;
	}

	public static void main(String[] args) {
		ListNode<Integer> node = new ListNode<>(1);
		node.add(2);
		node.add(3);
		node.add(4);
		node.add(5);
		ListNode.printListNode(findKthToTail1(node,5));
	}

}
