package leetCode;

public class Ugly {
	public boolean isUgly(int num) {
		if (num < 0) {
			num = ~num + 1;
		}
		if (num == 0 || num == 1) {
			return num == 0 ? false : true;
		}
		while (num != 1) {
			if (num % 2 == 0) {
				num /= 2;
			}
			if (num % 3 == 0) {
				num /= 3;
			}
			if (num % 5 == 0) {
				num /= 5;
			}
		}

		return num == 1 ? true : false;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
