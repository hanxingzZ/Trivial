package leetCode;

public class ReverseNum {

	public static int reverse(int x) {
		long result = 0;
		boolean flag = false;
		if (x < 0) {
			flag = true;
			x = ~x + 1;
		}
		while (x != 0) {
			int temp = x % 10;
			result = result * 10 + temp;
			x /= 10;
		}
		if (flag) {
			if (result > Integer.MAX_VALUE + 1) {
				return 0;
			}
			result = ~result + 1;
		} else {
			if (result > Integer.MAX_VALUE) {
				return 0;
			}
		}
		return (int) result;
	}

	public static void main(String[] args) {
		int x = -321;
		System.out.println(reverse(x));

	}
}
