package leetCode;

public class ReverseNum {

	public static int reverse(int x) {
		long result = 0;
		boolean flag = false;
		if (x < 0) {
			flag = true;
			x = ~x + 1;
		}
		while (x != 0) {
			int temp = x % 10;

			result = result * 10 + temp;
			x /= 10;
		}
		if (flag) {
			result = ~result + 1;
		}
		return (int) result;
	}

	public static void main(String[] args) {
		int x = -1;
		System.out.println(~x + 1);
		System.out.println(1);

	}
}
