public class Power {

	public static double power(double x, int n) {
		if (n == 0) {
			return 1;
		}
		if (x == 1) {

		}
		if (n < 0) {
			x = 1 / x;
			n = -n;
		}
		double sum = 1;

		while (n != 0) {
			if ((n & 1) == 1) {
				sum *= x;
			}
			x *= x;
			n >>= 1;
		}
		return sum;
	}

	public static void main(String[] args) {
		System.out.println(power(2, -1));

	}

}
